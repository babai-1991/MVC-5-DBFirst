@model ScratchPad.Models.Brand

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form method="post" action=@Url.Action("Edit", "Brand")>
    <input type="hidden" name="BrandID" value="@Model.BrandID" />
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="BrandName">Brand Name</label>
            <input type="text" class="form-control" id="BrandName" name="BrandName" value="@Model.BrandName" />
        </div>
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a href=@Url.Action("Index", "Brand") class="btn btn-danger">Cancel</a>
</form>

