@using System.Web.UI.WebControls
@model ScratchPad.ViewModels.LogInViewModel

@{
    ViewBag.Title = "LogIn";
}

@using (Html.BeginForm("LogIn", "Account", FormMethod.Post))
{
    <div class="form-row mx-auto" style="max-width: 300px">
        <div class="form-group col-md-12">
            @Html.LabelFor(m => m.UserName, new { @for = "username" })
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", id = "username", placeholder = "username" })
            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-12">
            @Html.LabelFor(m => m.Password, new { @for = "password" })
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", id = "password", placeholder = "password", type = "password" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-12">
            <button type="submit" class="btn btn-success">Log In</button>
            @Html.ValidationSummary()
        </div>
    </div>
}

