                    }
                }
            </th>
            <th>
                @if (ViewBag.IconClass == "fa-sort-asc")
                {
                    <a href=@Url.Action("Index", "Products", new {columnName = "DateOfPurchase", iconClass = "fa-sort-desc", currentPageNo = 1})>DateOfPurchase</a>
                    if (ViewBag.SortColumn == "DateOfPurchase")
                    {
