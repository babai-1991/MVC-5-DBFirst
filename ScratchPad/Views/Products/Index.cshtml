                    }
                }
            </th>
            <th>
                Active
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    <img src="data:image;base64,@product.Photo" width="100px" height="100px" />
                </td>

                <td>
                    @Html.DisplayFor(p => product.ProductID)
                </td>
                <td>
                    @Html.DisplayFor(p => product.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(p => product.Price)
                </td>
                <td>
                    @Html.DisplayFor(p => product.DateOfPurchase)
                </td>
                <td>
                    @Html.DisplayFor(p => product.AvailabilityStatus)
                </td>
                <td>
                    @Html.DisplayFor(p => product.Category.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(p => product.Brand.BrandName)
                </td>
                <td>
                    @Html.DisplayFor(p => product.Active)
                </td>

            </tr>
        }

        <tr>
            <td colspan="9">
                @{
                    int prevPageNo = ViewBag.CurrentPageNo - 1;

                    if (prevPageNo <= 0)
                    {
                        prevPageNo = 1;
                    }

                    int nextPageNo = ViewBag.CurrentPageNo + 1;
                    if (nextPageNo > ViewBag.TotalNoOfPages)
                    {
                        nextPageNo = ViewBag.TotalNoOfPages;
                    }

                }

                <ul class="pagination justify-content-center">
                    <li class="page-item">
                        <a class="page-link" href=@Url.Action("Index", "Products", new {columnName = @ViewBag.ColumnName, iconClass = @ViewBag.IconClass, currentPageNo = prevPageNo})>
                            <i class="fa fa-arrow-left"></i> Prev
                        </a>
                    </li>
                    @{
                        for (int i = 0; i < ViewBag.TotalNoOfPages; i++)
                        {
                            if (ViewBag.CurrentPageNo == (i + 1))
                            {
                                <li class="page-item active">
                                    <a class="page-link" href=@Url.Action("Index", "Products", new {columnName = @ViewBag.ColumnName, iconClass = @ViewBag.IconClass, currentPageNo = (@i + 1)})>
                                        @(i + 1)
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link" href=@Url.Action("Index", "Products", new {columnName = @ViewBag.ColumnName, iconClass = @ViewBag.IconClass, currentPageNo = (@i + 1)})>
                                        @(i + 1)
                                    </a>
                                </li>
                            }
                        }
                    }
                    <li class="page-item">
                        <a class="page-link" href=@Url.Action("Index", "Products", new {columnName = @ViewBag.ColumnName, iconClass = @ViewBag.IconClass, currentPageNo = nextPageNo})>
                            <i class="fa fa-arrow-right"></i> Next
                        </a>
                    </li>
                </ul>
            </td>
        </tr>

    </tbody>
</table>
