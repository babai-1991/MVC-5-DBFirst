@model List<DomainModels.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Products</h2>
<div class="d-flex justify-content-between">
    <form class="form-inline" action=@Url.Action("Index","Products")>
        @*<label for="search">Search</label>*@
        @Html.Label("Search", new { @for = "search" })
        @*<input type="search" name="searchQuery" id="search" class="form-control" value="@ViewBag.SearchTerm" />*@
        @Html.TextBox("searchQuery", ViewBag.SearchTerm as string, new { @class = "form-control", placeholder = "search", id = "search" })
        <button class="btn btn-primary">GO</button>
    </form>
</div>



<table class="table mt-2">
    <thead>
        <tr class="table-secondary">
            <th>
                Image
            </th>
            <th>
                @if (ViewBag.IconClass == "fa-sort-asc")
                {
                    <a href=@Url.Action("Index", "Products", new {columnName = "ProductID", iconClass = "fa-sort-desc", currentPageNo = 1})>ProductID</a>
                    if (ViewBag.SortColumn == "ProductID")
                    {
                        <i class="fa @ViewBag.IconClass"></i>
                    }
                }
                else
                {
                    <a href=@Url.Action("Index", "Products", new {columnName = "ProductID", iconClass = "fa-sort-asc", currentPageNo = 1})>ProductID</a>
                    if (ViewBag.SortColumn == "ProductID")
                    {
                        <i class="fa @ViewBag.IconClass"></i>
                    }
                }
            </th>
            <th>
                @if (ViewBag.IconClass == "fa-sort-asc")
                {
                    <a href=@Url.Action("Index", "Products", new {columnName = "ProductName", iconClass = "fa-sort-desc", currentPageNo = 1})>Product Name</a>
                    if (ViewBag.SortColumn == "ProductName")
                    {
                        <i class="fa @ViewBag.IconClass"></i>
                    }
                }
                else
                {
                    <a href=@Url.Action("Index", "Products", new {columnName = "ProductName", iconClass = "fa-sort-asc", currentPageNo = 1})>Product Name</a>
                    if (ViewBag.SortColumn == "ProductName")
                    {
