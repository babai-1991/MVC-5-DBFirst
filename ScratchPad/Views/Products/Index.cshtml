                    }
                }
            </th>
            <th>
                @if (ViewBag.IconClass == "fa-sort-asc")
                {
                    <a href=@Url.Action("Index", "Products", new {columnName = "Brand", iconClass = "fa-sort-desc", currentPageNo = 1})>Brand</a>
                    if (ViewBag.SortColumn == "Brand")
                    {
                        <i class="fa @ViewBag.IconClass"></i>
                    }
                }
                else
                {
                    <a href=@Url.Action("Index", "Products", new {columnName = "Brand", iconClass = "fa-sort-asc", currentPageNo = 1})>Brand</a>
