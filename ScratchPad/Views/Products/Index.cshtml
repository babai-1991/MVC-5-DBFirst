                    }
                }
            </th>
            <th>
                @if (ViewBag.IconClass == "fa-sort-asc")
                {
                    <a href=@Url.Action("Index", "Products", new {columnName = "AvailabilityStatus", iconClass = "fa-sort-desc", currentPageNo = 1})>AvailabilityStatus</a>
                    if (ViewBag.SortColumn == "AvailabilityStatus")
