@model List<ScratchPad.Models.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}

<h2>Categories</h2>
<div class="d-flex justify-content-between">
    <a href=@Url.Action("Create","Category",new{area="Admin"})>Insert a Category</a>
    <form class="form-inline" action=@Url.Action("Index","Category",new{area="Admin"})>
        <label for="search">Search</label>
        <input type="search" name="searchCategory" id="search" class="form-control" value="@ViewBag.SearchTerm" />
        <button class="btn btn-primary">GO</button>
    </form>
</div>
<table class="table mt-2">
    <thead>
        <tr>
            <th>
                CategoryID
            </th>
            <th>
                Category Name
            </th>
            <th>
                Image
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model)
        {
            <tr>
                <td>@cat.CategoryID</td>
                <td>@cat.CategoryName</td>
                <td>
                    <img src="@Url.Content(String.IsNullOrEmpty(cat.Photo)?"~/upload-img/no.png":cat.Photo)" width="100px" height="100px" />
                </td>
                <td>
                    <a href=@Url.Action("Details","Category",new {id=@cat.CategoryID,area="Admin"})>Details</a>
                </td>
                <td>
                    <a href=@Url.Action("Edit","Category",new {id=@cat.CategoryID,area="Admin"})>Edit</a>
                </td>
                <td>
                    <a href=@Url.Action("Delete","Category",new {id=@cat.CategoryID,area="Admin"})>Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>
