                {
                    <a href=@Url.Action("Index", "Products", new {area="Admin",columnName = "DateOfPurchase", iconClass = "fa-sort-asc", currentPageNo = 1})>DateOfPurchase</a>
                    if (ViewBag.SortColumn == "DateOfPurchase")
                    {
                        <i class="fa @ViewBag.IconClass"></i>
                    }
                }
            </th>
            <th>
                @if (ViewBag.IconClass == "fa-sort-asc")
                {
                    <a href=@Url.Action("Index", "Products", new {area="Admin",columnName = "AvailabilityStatus", iconClass = "fa-sort-desc", currentPageNo = 1})>AvailabilityStatus</a>
                    if (ViewBag.SortColumn == "AvailabilityStatus")
