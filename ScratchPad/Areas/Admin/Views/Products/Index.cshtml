                    if (ViewBag.SortColumn == "Price")
                    {
                        <i class="fa @ViewBag.IconClass"></i>
                    }
                }
                else
                {
                    <a href=@Url.Action("Index", "Products", new {area="Admin",columnName = "Price", iconClass = "fa-sort-asc", currentPageNo = 1})>Price</a>
                    if (ViewBag.SortColumn == "Price")
                    {
                        <i class="fa @ViewBag.IconClass"></i>
                    }
                }
            </th>
            <th>
                @if (ViewBag.IconClass == "fa-sort-asc")
                {
                    <a href=@Url.Action("Index", "Products", new {area="Admin",columnName = "DateOfPurchase", iconClass = "fa-sort-desc", currentPageNo = 1})>DateOfPurchase</a>
                    if (ViewBag.SortColumn == "DateOfPurchase")
                    {
                        <i class="fa @ViewBag.IconClass"></i>
                    }
                }
