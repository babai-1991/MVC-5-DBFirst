                    }
                }
            </th>
            <th>
                @if (ViewBag.IconClass == "fa-sort-asc")
                {
                    <a href=@Url.Action("Index", "Products", new {area="Admin",columnName = "Category", iconClass = "fa-sort-desc", currentPageNo = 1})>Category</a>
                    if (ViewBag.SortColumn == "Category")
                    {
                        <i class="fa @ViewBag.IconClass"></i>
                    }
                }
                else
                {
                    <a href=@Url.Action("Index", "Products", new {area="Admin",columnName = "Category", iconClass = "fa-sort-asc", currentPageNo = 1})>Category</a>
                    if (ViewBag.SortColumn == "Category")
                    {
                        <i class="fa @ViewBag.IconClass"></i>
                    }
                }
            </th>
            <th>
                @if (ViewBag.IconClass == "fa-sort-asc")
                {
                    <a href=@Url.Action("Index", "Products", new {area="Admin",columnName = "Brand", iconClass = "fa-sort-desc", currentPageNo = 1})>Brand</a>
                    if (ViewBag.SortColumn == "Brand")
                    {
                        <i class="fa @ViewBag.IconClass"></i>
                    }
                }
                else
                {
                    <a href=@Url.Action("Index", "Products", new {area="Admin",columnName = "Brand", iconClass = "fa-sort-asc", currentPageNo = 1})>Brand</a>
