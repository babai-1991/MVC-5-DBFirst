@model List<DomainModels.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}

<h2>Products</h2>
<div class="d-flex justify-content-between">
    <a href=@Url.Action("Create","Products",new{area="Admin"})>Insert a Product</a>
    <form class="form-inline" action=@Url.Action("Index","Products",new{area="Admin"})>
        @*<label for="search">Search</label>*@
        @Html.Label("Search", new { @for = "search" })
        @*<input type="search" name="searchQuery" id="search" class="form-control" value="@ViewBag.SearchTerm" />*@
        @Html.TextBox("searchQuery", ViewBag.SearchTerm as string, new { @class = "form-control", placeholder = "search", id = "search" })
        <button class="btn btn-primary">GO</button>
    </form>
</div>



<table class="table mt-2">
    <thead>
        <tr class="table-secondary">
            <th>
                Image
            </th>
            <th>
                @if (ViewBag.IconClass == "fa-sort-asc")
                {
                    <a href=@Url.Action("Index", "Products", new {area="Admin",columnName = "ProductID", iconClass = "fa-sort-desc", currentPageNo = 1})>ProductID</a>
                    if (ViewBag.SortColumn == "ProductID")
                    {
                        <i class="fa @ViewBag.IconClass"></i>
                    }
                }
                else
                {
                    <a href=@Url.Action("Index", "Products", new {area="Admin",columnName = "ProductID", iconClass = "fa-sort-asc", currentPageNo = 1})>ProductID</a>
                    if (ViewBag.SortColumn == "ProductID")
                    {
                        <i class="fa @ViewBag.IconClass"></i>
                    }
                }
            </th>
            <th>
                @if (ViewBag.IconClass == "fa-sort-asc")
                {
                    <a href=@Url.Action("Index", "Products", new {area="Admin",columnName = "ProductName", iconClass = "fa-sort-desc", currentPageNo = 1})>Product Name</a>
                    if (ViewBag.SortColumn == "ProductName")
                    {
                        <i class="fa @ViewBag.IconClass"></i>
                    }
                }
                else
                {
                    <a href=@Url.Action("Index", "Products", new {area="Admin",columnName = "ProductName", iconClass = "fa-sort-asc", currentPageNo = 1})>Product Name</a>
                    if (ViewBag.SortColumn == "ProductName")
                    {
                        <i class="fa @ViewBag.IconClass"></i>
                    }
                }
            </th>
            <th>
                @if (ViewBag.IconClass == "fa-sort-asc")
                {
