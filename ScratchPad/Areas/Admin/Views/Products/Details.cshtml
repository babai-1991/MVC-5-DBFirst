@model ScratchPad.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}

<h2>Details Of the Product</h2>
<table class="table mt-2">
    <tr>
        <th>
            ProductID
        </th>
        <td>
            @Model.ProductID
        </td>
    </tr>
    <tr>
        <th>
            Name
        </th>
        <td>
            @Model.ProductName
        </td>
    </tr>
    <tr>
        <th>
            Price
        </th>
        <td>
            @Model.Price
        </td>
    </tr>
    <tr>
        <th>
            DateOfPurchase
        </th>
        <td>
            @Model.DateOfPurchase.Value.ToString("D")
        </td>
    </tr>
    <tr>
        <th>
            AvailabilityStatus
        </th>
        <td>
            @Model.AvailabilityStatus
        </td>
    </tr>
    <tr>
        <th>
            CategoryID
        </th>
        <td>
            @Model.Category.CategoryName
        </td>
    </tr>
    <tr>
        <th>
            BrandID
        </th>
        <td>
            @Model.Brand.BrandName
        </td>
    </tr>
    <tr>
        <th>
            Photo
        </th>
        <td>
            <img src="data:image;base64,@Model.Photo" width="100px" height="100px" />
        </td>
    </tr>
    <tr>
        <th>
            Active
        </th>
        <td>
            @Model.Active
        </td>
    </tr>
    <tr>
        <td>
            <a href=@Url.Action("Index","Products",new{area="Admin"})>Back To List</a>
        </td>
    </tr>
</table>
