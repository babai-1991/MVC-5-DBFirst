@model CompanyName.DomainModels.Brand

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}

<h2>Edit</h2>
@using (Html.BeginForm("Edit", "Brand", new{ area="Admin" }, FormMethod.Post))
{
    <input type="hidden" name="BrandID" value="@Model.BrandID" />
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="BrandName">Brand Name</label>
            <input type="text" class="form-control" id="BrandName" name="BrandName" value="@Model.BrandName" />
        </div>
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    @Html.ActionLink("Cancel", "Index", "Brand",new{ area = "Admin" }, new {@class= "btn btn-danger" })
}

