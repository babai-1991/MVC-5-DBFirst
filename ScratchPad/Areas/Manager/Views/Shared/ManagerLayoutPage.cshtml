<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/font-awesome.min.css" />
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-info navbar-dark">
        <a class="navbar-brand" href="#">Manager</a>
        <div class="col-8">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href=@Url.Action("Index","Home")>Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href=@Url.Action("Index","Products")>Products</a>
                </li>
            </ul>
        </div>
        <div class="col-3 text-white d-flex justify-content-around">

            @if (User.Identity.IsAuthenticated)
            {
                <span> Welcome @User.Identity.Name</span>
                @Html.ActionLink("Log out", "LogOut", "Account", new { area = "" }, new { @class = "text-white text-decoration-none" })
            }
        </div>
    </nav>
    <div class="container-fluid">
        @RenderBody()

    </div>
</body>

</html>